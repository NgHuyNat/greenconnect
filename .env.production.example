# Database Configuration
DB_NAME=greenconnect
DB_USERNAME=postgres
DB_PASSWORD=your-super-strong-password-change-this
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-redis-password-optional

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-minimum-32-characters-long-change-this
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Frontend URLs
NEXT_PUBLIC_API_URL=https://your-domain.com/api/v1
NEXT_PUBLIC_SOCKET_URL=https://your-domain.com

# Or for IP-based deployment:
# CORS_ORIGIN=http://192.168.1.100
# NEXT_PUBLIC_API_URL=http://192.168.1.100:3001/api/v1
# NEXT_PUBLIC_SOCKET_URL=http://192.168.1.100:3001
